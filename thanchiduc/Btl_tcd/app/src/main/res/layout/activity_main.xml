<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dovui"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <ImageView
            android:id="@+id/imgVolume"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:src="@drawable/ic_volume_on" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="20dp"

            android:text="Đố vui giải trí" />

        <ImageView
            android:layout_width="150dp" android:layout_marginTop="15dp"
            android:layout_height="150dp"
            android:src="@drawable/icon_dovui1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnChoingay"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:padding="15dp"
            android:text="CHƠI NGAY"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF"
            android:padding="15dp"
            android:text="THÀNH TÍCH"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>